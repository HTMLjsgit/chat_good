button{
	cursor: pointer;
}
input[type="submit"]{
	cursor: pointer;
}
.submenuText{
	font-size: 18px;
}
.submitsearcch{
	border: none;
	height: 28px;
	font-family: "游ゴシック";
	font-weight: bold;
	width: 60px;
}
.submitsearcch:hover{
	transition: background-color 0.3s ease;
	background-color: #ddd;
}
#home_label{
	z-index: 100;
}
#searchButton{
	cursor: pointer;
}
.topBox{
	color: #fff;
	background-color: #808080;
	position: sticky;
	top: 0;
	z-index: 10;

}

.topBox.hide{
	transition: 0.3s;
	transform: translateY(-100%);
}
.making_room{
	color: #fff;
	margin-top: 20px;
	text-decoration: none;
}

body {
	font-family: -apple-system, BlinkMacSystemFont, Roboto, "Segoe UI semibold", "Helvetica Neue", HelveticaNeue, YuGothic, "Yu Gothic", "Segoe UI", Verdana, Meiryo, sans-serif;
	background-color: #707069;
}


.topText{
	padding-top: 20px;
	padding-bottom: 20px;
	font-size: 25px;
}
.topText a{
	text-decoration: none;
}
.submenuText a{
	color: #fff;
	text-decoration: none;
	font-size: 16px;
	padding-left: 10px;
	padding-right: 10px;
}
.submenuText a:hover{
	text-decoration: underline;
}
.search_field{
	width: 300px;
	border-radius: 5px;
	height: 28px;
	color:#696969;
	font-family: -apple-system, BlinkMacSystemFont, Roboto, "Segoe UI semibold", "Helvetica Neue", HelveticaNeue, YuGothic, "Yu Gothic", "Segoe UI", Verdana, Meiryo, sans-serif;

}
.room_a_box{
	margin-top: 15px;
}
.roomNewBox:hover{
	transition: background-color 0.3s ease;
	background-color: #4A9F3C;
}
.new_room{
	text-decoration: none;
	font-size: 18px;
	padding-top: 20px;
}
.roomNewBox{
	background-color: #0fab41;
	border-radius: 5px;
	border: 1px solid #ddd;
}
.roomNewBox h1{
	font-size: 18px;
	padding-left: 10px;
	padding-right: 10px;
	color: #fff;
	padding-top: 10px;
	padding-bottom: 10px;
}

.search_field:focus{
	outline: none;
}
.searchformBox{
	display: flex;
	padding-top: 20px;
	/*padding-bottom: 20px;*/
}
.contentsmartBox{
	display: none;
}
.topBox .contentupcBox{
	display: flex;
	justify-content: space-around;
}
.topText a{
	color: #fff;
}
.searchareaButton{
	display: inline-block;
}
.searchButton{
	display: none;
	cursor: pointer;
	margin-top: 15px;
}
@media screen and (max-width: 480px){
	.topText a{
		font-size: 20px;
	}
	input.search_field{
		width: 100%;
	}
	.searchButton{
		display: block;
	}
	.formsearchGOBOx{
		display: none;
		top: 50px;
	}
	.searchformBox{
		position: absolute;
		display: flex;
		left: 5em;
		opacity: 0.8;
		top: 60px;
	}
	.room_search{
		display: flex;
	}
}
@media screen and (max-width: 960px){
	.contentupcBox{
		display: none;
	}
	.contentsmartBox{
		display: flex;
	}
	.smartsearchFormBox{
		padding-left: 10px;
	}
	.search_field{
		width: 170px;
	}
	ol, ul {

	  list-style: none;
	}
	a {

	  /*text-decoration: none;*/
	  color: inherit;
	}
	.cp_cont {
	  height: 65vh;
	}
	.cp_offcm01 {
	  position: absolute;
	  top: 15px;
	  right: 20px;
	  display: inline-block;
	}
	/* menu */
	.cp_offcm01 .cp_menu {
	  position: fixed;
	  top: 0;
	  right: -100vw;
	  z-index: 10;
	  width: 250px;
	  height: 100%;
	  cursor: pointer;
	  -webkit-transition: 0.53s transform;
	  transition: 0.53s transform;
	  -webkit-transition-timing-function: cubic-bezier(.38,.52,.23,.99);
	  transition-timing-function: cubic-bezier(.38,.52,.23,.99);
	  background-color: #A4C6FF;
	  opacity: 0.9;
	}
	.cp_offcm01 .cp_menu ul {

	  margin: 0;
	  padding: 0;
	}
	.cp_offcm01 .cp_menu li {

	  list-style: none;
	}
	.cp_offcm01 .cp_menu li a {

	  display: block;
	  padding: 20px;
	  text-decoration: none;
	  color: #ffffff;
	  font-size: 23px;
	  border-bottom: 1px solid #ffffff;

	}

	.cp_offcm01 #cp_toggle01 {
	  position: absolute;
	  display: none;
	  opacity: 0;
	}
	.cp_offcm01 #cp_toggle01:checked ~ .cp_menu {
	  -webkit-transform: translateX(-100vw);
	  transform: translateX(-100vw);
	}
	/* menu toggle */
	.cp_offcm01 #cp_toggle01 ~ label {
	  background-image: url(<%= asset_path "menu.png" %>);
	  background-size: cover;
	  width: 30px;
	  height: 30px;
	  display: block;
	  padding: 0.5em;
	  cursor: pointer;
	  -webkit-transition: 0.5s transform;
	  transition: 0.5s transform;
	  -webkit-transition-timing-function: cubic-bezier(.61,-0.38,.37,1.27);
	  transition-timing-function: cubic-bezier(.61,-0.38,.37,1.27);
	  text-align: center;
	  color: #fff;
	}
	.cp_offcm01 #cp_toggle01:checked ~ label {

	  -webkit-transform: translateX(-250px);
	  transform: translateX(-250px);
	}
	.cp_offcm01 #cp_toggle01 ~ label::before {

	  border-bottom: 3px solid white;
	  font-family: 'FontAwesome';
	  font-family: serif;
	  /*content: '\f0c9';*/
	  font-size: 2em

	}
	.cp_offcm01 #cp_toggle01:checked ~ label::before {
	  /*content: '\f00d';*/
	}
	/* contents */
	.cp_contents {
	  color: #333333;
	  text-align: center;
	}
	.topText{
		padding-left: 1em;
	}

}